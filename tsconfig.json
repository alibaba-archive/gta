{
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": false,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "newLine": "lf",
    "noEmitHelpers": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "strict": true,
    "downlevelIteration": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "typeRoots": [ "node_modules/@types" ],
  },
  "exclude": [ "node_modules", "lib" ],
  "compileOnSave": false
}
